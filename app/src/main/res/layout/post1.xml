<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/p1"
    android:background="@color/white">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:background="@drawable/p4"
        android:id="@+id/p1iv_1"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/p1tv_1"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        />
    <Button
        android:id="@+id/p1bt_1"
        android:background="@drawable/p1_2"
        android:layout_marginLeft="40dp"
        android:layout_gravity="bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
     />
</LinearLayout>


    <TextView
        android:id="@+id/p1tv_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/p1iv_2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:layout_gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/p1iv_3"
            android:background="@drawable/p2_2"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
           android:layout_gravity="center" />
        <TextView
            android:id="@+id/p1_zan"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="点赞"
            android:layout_marginRight="30dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
        android:layout_gravity="center" />

        <ImageView
            android:id="@+id/p1iv_4"
            android:background="@drawable/p3_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp" />



        <TextView
            android:id="@+id/p1tv_4"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="评论"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />
    </LinearLayout>



</LinearLayout>